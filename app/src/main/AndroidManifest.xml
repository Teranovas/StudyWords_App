<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.StudyWords"
        tools:targetApi="31">
        <activity
            android:name=".word.WordChainActivity"
            android:exported="false"
            android:label="@string/title_activity_word_chain"
            android:theme="@style/Theme.StudyWords" />
        <activity
            android:name=".sentence.SentenceActivity"
            android:exported="false" />
        <activity
            android:name=".sentence.SplashSentenceActivity"
            android:exported="false"
            android:label="SplashSentenceActivity"
            android:theme="@style/Theme.StudyWords" />
        <activity
            android:name=".community.WritePostActivity"
            android:exported="false" />
        <activity
            android:name=".community.PostDetailActivity"
            android:exported="false"
            android:label="@string/title_activity_post_detail"
            android:theme="@style/Theme.StudyWords" />
        <activity
            android:name=".community.BoardActivity"
            android:exported="false"
            android:label="@string/title_activity_board"
            android:theme="@style/Theme.StudyWords" />
        <activity
            android:name=".IntroSplashActivity"
            android:exported="true"
            android:label="@string/title_activity_intro_splash"
            android:theme="@style/Theme.StudyWords">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />
    </application>

</manifest>